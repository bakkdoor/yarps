<div class="membership_info">
  <h4>Projektinformationen:</h4>
  <div>
      <table>
          <tr>
              <td class="title"><%= l :project %></td>
              <td class="value"><%= @membership.project.name %></td>
          </tr>
          <tr>
              <td class="title"><%= l :description %></td>
              <td class="value"><%= @membership.project.description %></td>
          </tr>
          <tr>
              <td class="title"><%= l :created_at %></td>
              <td class="value"><%= @membership.project.created_at.format :lang => current_user.language %></td>
          </tr>
          <tr>
              <td class="title"><%= l :updated_at %></td>
              <td class="value"><%= @membership.project.updated_at.format :lang => current_user.language %></td>
          </tr>
          <tr>
              <td class="title"><%= l :project_members %></td>
              <td class="value">
                <ul>
                  <% @membership.project.users.each do |member| %>
                    <li>
                      <%= link_to member.login,
                                  :controller => :users,
                                  :action => :show,
                                  :id => member.id %>
                    </li>
                  <% end %>
                </ul>
              </td>
          </tr>
      </table>
  </div>
</div>