<div class="headline"><%= l :projects %>: <%= l :all_tags %></div>
<% tag_cloud @tags.sort_by{ |t| t.name }, tag_cloud_css_classes do |tag, css_class| %>
  <span class="<%= css_class %>" style="padding:0.5em">
    <%= link_to "#{tag.name} (#{tag.count})", { :controller => :projects, :action => :tag, :id => tag.name } %>
  </span>
<% end %>
